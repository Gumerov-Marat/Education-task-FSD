mixin block-lib(props={})

  //- Микс задает место для элемента на странице, добавляет подписи, задает размер
  //- Получает данные:
  //- title       string  Заголовок - название элемента
  //- mods        string  Описание модификатора
  //- width       string  Ширина в виде 'XXpix'

  .block-lib(class= props.type || '',
  style="width:"+props.width)
    .block-lib__description-row
      h3.block-lib__title= props.title
      .block-lib__mods= props.mods
    .block-lib__block-row
      block


mixin block-lib-self-title(props={})

  //- Микс задает место для элементов с собственным заголовком.
  //- Получает данные:
  //- title       string  Заголовок - название элемента
  //- mods        string  Описание модификатора
  //- width       string  Ширина в виде 'XXpix'

  .block-lib(class= props.type || '',
  style="width:"+props.width)
    block

mixin free-space(props = {})
  //- Задает свободное пространство на странице
  //- width
  //- height

  -
    let styleString = ''
    if (typeof(props.width) !== 'undefined' && props.width) {
      styleString += 'width:' + props.width + ';'
    }
    if (typeof(props.height) !== 'undefined' && props.height) {
      styleString += 'height:' + props.height + ';'
    }
  .free-space(style= styleString)
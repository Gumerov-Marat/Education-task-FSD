mixin field-checkbox(props={})

    //- checkbox с label
    //- Данные для JS храняться в атрибутах Data
    //- 
    //- Принимает параметры в props:
    //- dataName                string      имя для data-name
    //- mods                    string      'open' - открыто меню
    //- labelTitle              string      
    //- attrs:                  {object}
    //-     name:               {string}
    //- ...
    //- 
    //- 

    -
        let allMods = ''
        if (typeof(props.mods) !== 'undefined' && props.mods) {
        let modList = props.mods.split(',')
        for (let i=0; i < modList.length; i++) {
            allMods = allMods + ' field-checkbox_' + modList[i].trim()
            }
        }

    label.field-checkbox(
        class= allMods,
        data-name= props.dataName || ''
        )
        input.field-checkbox__input(
            type="checkbox",
            checked= props.checked || false
            )
        .field-checkbox__marker
        p.field-checkbox__label= props.labelTitle || ''


include ../../modules/icon-text/icon-text

mixin icon-text-list(props={})

    //- Список текста с иконками
    //- Принимает параметры в props:
    //- moduleClass             string      доп имя класса для списка
    //- mods                    string      модификации
    //- iconStrings             string      Строки с иконками icon-text
    //-     moduleClass         string      доп имя класса
    //-     mods                string      модификации
    //-     icon                string      иконка из шрифта material icons
    //-     lineTitle           string      Заголовок текста
    //-     description         string      описание

    

    -
        let moduleClass = props.moduleClass || ''
        let allMods = ''
        if (typeof(props.mods) !== 'undefined' && props.mods) {
        let modList = props.mods.split(',')
        for (let i=0; i < modList.length; i++) {
            allMods = allMods + ' button-block_' + modList[i].trim()
            }
        }

    .icon-text-list(class= moduleClass + allMods)
        each iconRow, index in props.iconStrings
            +icon-text({
                mods: iconRow.mods || '',
                moduleClass: iconRow.moduleClass || '',
                icon: iconRow.icon || '',
                lineTitle: iconRow.lineTitle || '',
                description: iconRow.description || ''
            })
            hr.icon-text-list__separate(noshade = "noshade")
